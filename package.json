{
	"name": "@progfay/nextjs-ssg-rewrite-rule-gen",
	"version": "1.2.0",
	"description": "generate nginx rewrite rules for Next.js SSG (Pages Router)",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"nextjs-ssg-rewrite-rule-gen": "bin/nextjs-ssg-rewrite-rule-gen.js"
	},
	"files": [
		"bin",
		"src",
		"package.json"
	],
	"scripts": {
		"prepare": "npm run build",
		"prebuild": "rm -rf dist",
		"build": "tsc -p tsconfig.json",
		"generate": "./bin/nextjs-ssg-rewrite-rule-gen.js",
		"test": "node --test",
		"lint": "biome check .",
		"format": "biome check --write ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/progfay/nextjs-ssg-rewrite-rule-gen.git"
	},
	"author": "progfay",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/node": "24.10.2",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
