{
	"name": "@progfay/nextjs-ssg-rewrite-rule-gen",
	"version": "1.1.0",
	"description": "generate nginx rewrite rules for Next.js SSG (Pages Router)",
	"main": "dist/index.js",
	"bin": {
		"nextjs-ssg-rewrite-rule-gen": "bin/nextjs-ssg-rewrite-rule-gen.js"
	},
	"files": [
		"bin",
		"dist",
		"package.json"
	],
	"scripts": {
		"prepare": "npm run build",
		"prebuild": "rm -rf dist",
		"build": "tsc -p tsconfig.json",
		"generate": "./bin/nextjs-ssg-rewrite-rule-gen.js",
		"test": "jest --config jest.config.js",
		"lint": "biome check .",
		"format": "biome check --write ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/progfay/nextjs-ssg-rewrite-rule-gen"
	},
	"author": "progfay",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@swc/jest": "0.2.39",
		"@types/jest": "30.0.0",
		"jest": "30.1.3",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"glob": "11.0.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
