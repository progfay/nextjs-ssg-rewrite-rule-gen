{
	"name": "@progfay/nextjs-ssg-rewrite-rule-gen",
	"version": "1.0.0",
	"description": "generate nginx rewrite rules for Next.js SSG (Pages Router)",
	"main": "dist/index.js",
	"bin": {
		"nextjs-ssg-rewrite-rule-gen": "bin/nextjs-ssg-rewrite-rule-gen.js"
	},
	"files": ["bin", "dist", "package.json"],
	"scripts": {
		"prepare": "npm run build",
		"prebuild": "rm -rf dist",
		"build": "tsc -p tsconfig.json",
		"generate": "ts-node -P tsconfig.json index.ts",
		"test": "jest --config jest.config.js",
		"lint": "biome check src",
		"format": "biome check --apply src"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/progfay/nextjs-ssg-rewrite-rule-gen"
	},
	"author": "progfay",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.5.0",
		"@swc/jest": "0.2.29",
		"@types/jest": "29.5.11",
		"jest": "29.7.0",
		"ts-node": "10.9.2",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"assert-never": "1.2.1",
		"glob": "10.3.10"
	},
	"publishConfig": {
		"access": "public"
	}
}
